{
  "name": "vox",
  "version": "0.0.0",
  "description": "voxel world",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "lint-js": "standard",
    "lint-css": "stylelint **/*.css --config node_modules/stylelint-config-standard/index.js",
    "lint": "npm run lint-js && npm run lint-css",
    "test": "npm run lint && npm run build && node ./test",
    "watch": "mkdirp build && watchify --debug -t brfs src/client -o build/bundle.js",
    "build": "rimraf build && mkdirp build && npm run -s browserify | npm run -s uglify > build/bundle.js",
    "browserify": "browserify -t brfs src/client",
    "uglify": "uglifyjs -c -m",
    "show-bloat": "browserify --full-paths src/client | discify --open",
    "start": "npm run watch & node ./src/server"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/dcposch/gl.git"
  },
  "license": "UNLICENSED",
  "author": "",
  "bugs": {
    "url": "https://github.com/dcposch/gl/issues"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "game-shell": "^1.3.2",
    "gl-mat3": "^2.0.0",
    "gl-mat4": "^1.1.4",
    "gl-vec2": "^1.0.0",
    "gl-vec3": "^1.0.3",
    "gl-vec4": "^1.0.1",
    "murmurhash": "0.0.2",
    "regl": "^1.2.1",
    "uuid": "^3.3.2",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "brfs": "^2.0.0",
    "browserify": "^16.2.2",
    "disc": "^1.3.2",
    "find-requires": "^0.2.2",
    "fs-extra": "^7.0.0",
    "http-server": "^0.11.1",
    "mkdirp": "^0.5.1",
    "pngjs": "^3.0.0",
    "rimraf": "^2.5.4",
    "standard": "^11.0.1",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "tape": "^4.6.2",
    "uglify-js": "^3.4.7",
    "walk-sync": "^0.3.1",
    "watchify": "^3.8.0"
  }
}
